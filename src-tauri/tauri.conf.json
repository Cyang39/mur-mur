{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "murmur",
  "version": "0.1.0",
  "identifier": "site.lalafell.murmur",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "murmur",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/whisper-cli",
      "bin/whisper-cli-coreml",
      "bin/whisper-cli-vulkan",
      "bin/ffmpeg"
    ],
    "resources": [
      "resources/ggml-silero-v5.1.2.bin"
    ]
  }
}
